name: PersistentVolumeClaim
desc: 10G PersistentVolumeClaimk
yaml:
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-store
spec:
  resources:
    requests:
      storage: 10G
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce

name: Pod
desc: Pod for Loki (example)
yaml:
apiVersion: v1
kind: Pod
metadata:
  name: loki
  labels:
    app: loki
spec:
  securityContext:
    runAsGroup: 1000
    runAsUser: 1000
    fsGroup: 1000
  volumes:
    - name: pvc-store
      persistentVolumeClaim:
        claimName: pvc-store  # refers to a PersistentVolumeClaim
    - name: loki-config
      configMap:
        name: loki-config  # refers to a ConfigMap
  containers:
    - name: loki
      image: grafana/loki:2.9.0
      volumeMounts:
        - mountPath: "/pvc-store"
          name: pvc-store
        - mountPath: "/etc/loki"
          name: loki-config
      securityContext:
        seccompProfile:
          type: RuntimeDefault
        allowPrivilegeEscalation: false
        capabilities:
          drop:
            - ALL

